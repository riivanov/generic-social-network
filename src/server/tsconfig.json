{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules", "./dist"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": "./",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "paths": {
      "@lib/*": ["../lib/*"]
    }
  }
}
